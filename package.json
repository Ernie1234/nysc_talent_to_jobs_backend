{
  "name": "nysc_talents_to_jobs_backend",
  "module": "index.ts",
  "main": "dist/server.js",
  "description": "Backend API for NYSC Talents to Jobs platform",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "npm run clean && tsc && npm run fix-aliases",
    "fix-aliases": "tsc-alias -p tsconfig.json",
    "build:verbose": "npm run clean && tsc && tsc-alias -p tsconfig.json --verbose",
    "start": "node dist/server.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.{ts,js,json}",
    "format:check": "prettier --check src/**/*.{ts,js,json}",
    "docker:dev": "docker-compose up --build",
    "docker:dev:down": "docker-compose down",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up --build",
    "docker:build": "docker build -t nysc-talents-jobs-backend .",
    "db:tools": "docker-compose --profile tools up mongo-express",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "check-dist": "node -e \"const fs = require('fs'); const items = fs.readdirSync('./dist', { withFileTypes: true }); items.forEach(item => { console.log(item.isDirectory() ? item.name + '/' : item.name); });\"",
    "check-dist-structure": "find dist -type f -name '*.js' | head -20",
    "check-dist-windows": "if exist dist (dir dist /B) else (echo dist folder does not exist)"
  },
  "private": true,
  "keywords": [
    "nysc",
    "talents",
    "jobs",
    "api",
    "backend"
  ],
  "author": "Anumah Joshua Eneye",
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/bcrypt": "^5.0.2",
    "@types/bun": "latest",
    "@types/chalk": "^2.2.0",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.18",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.2",
    "@types/mongoose": "^5.11.96",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.15.29",
    "@types/node-cron": "^3.0.11",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/pdfkit": "^0.17.3",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^9.36.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^7.2.1",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.5",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@google/genai": "^0.13.0",
    "axios": "^1.9.0",
    "bcrypt": "^5.1.1",
    "chalk": "^4.1.2",
    "cloudinary": "^1.41.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.15.1",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.2",
    "multer-storage-cloudinary": "^4.0.0",
    "node-cron": "^3.0.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pdfkit": "^0.17.2",
    "resend": "^4.5.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "zod": "^3.25.46"
  }
}
